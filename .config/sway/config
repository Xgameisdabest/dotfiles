# #MODIFIER KEYS
# #the windows key
set $mod Mod4
# #the alt key
set $alt Mod1
#
# # Use Mouse+$mod to drag floating windows to their wanted position
# floating_modifier $mod
#
# # move tiling windows via drag & drop by left-clicking into the title bar,
# # or left-clicking anywhere into the window while holding the floating modifier.
# #tiling_drag modifier titlebar
#
# # the config uses modular type settings, making it more flexible and managable
#
# include ~/.config/sway/sway-config-modules/exec
# include ~/.config/sway/sway-config-modules/keybinds
# include ~/.config/sway/sway-config-modules/i3_system_keybinds
# include ~/.config/sway/sway-config-modules/coloring
# include ~/.config/sway/sway-config-modules/workspace
# include ~/.config/sway/sway-config-modules/for_window_rules
# include ~/.config/sway/sway-config-modules/gaps_and_border
# include ~/.config/sway/sway-config-modules/special_keys_keybinds

exec --no-startup-id waydroid show-full-ui
exec --no-startup-id waybar -s ~/.config/waybar/bar_style/dark.css -c ~/.config/waybar/bar_config/sway_waydroid_bar.jsonc &
bindsym $mod+Escape exec --no-startup-id ~/.config/rofi/modules/rofi-power-menu
bindsym $mod+b exec --no-startup-id ~/.config/rofi/modules/rofi-power-mode
bindsym $mod+f fullscreen toggle
bindsym $mod+t exec --no-startup-id alacritty
bindsym $mod+r exec --no-startup-id ~/.config/rofi/scripts/drun.sh
for_window [title="^Waydroid$"] fullscreen enable
input type:touchpad {
    natural_scroll enabled
}
