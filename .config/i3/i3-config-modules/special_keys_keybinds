#Caps Lock
bindsym Caps_Lock exec --no-startup-id ~/.config/dunst/scripts/key_notif/capslock_notify.sh

#Num Lock
bindsym Num_Lock exec --no-startup-id ~/.config/dunst/scripts/key_notif/numlock_notify.sh

#Audio
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/dunst/scripts/volume.sh volume_up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/dunst/scripts/volume.sh volume_down
bindsym XF86AudioMute exec --no-startup-id ~/.config/dunst/scripts/volume.sh volume_mute

#Microphone
bindsym XF86AudioMicMute exec --no-startup-id ~/.config/dunst/scripts/volume.sh mic_toggle

#Screen Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/dunst/scripts/volume.sh brightness_up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/dunst/scripts/volume.sh brightness_down

#Airplane mode
bindsym XF86RFKill exec --no-startup-id ~/.config/dunst/scripts/noti-airplane.sh

#Display settings
bindsym XF86Display exec --no-startup-id arandr

#screenshot
bindsym Print exec --no-startup-id desktop="/home/$USER/Pictures/$(date +'%Y-%m-%d_%H-%M-%S_desktop').png" && maim "$desktop" && xclip -sel clip -t image/png -i "$desktop" && notify-send "Screenshotted 󰨇 "
bindsym $mod+Print exec --no-startup-id focus_window="/home/$USER/Pictures/$(date +'%Y-%m-%d_%H-%M-%S_window').png" && maim --window $(xdotool getactivewindow) "$focus_window" && xclip -sel clip -t image/png -i "$focus_window" && notify-send "Window Screenshotted 󰖯 "
bindsym Shift+Print exec --no-startup-id selected_area="/home/$USER/Pictures/$(date +'%Y-%m-%d_%H-%M-%S_area').png" && maim --select "$selected_area" && xclip -sel clip -t image/png -i "$selected_area" && notify-send "Selected Area Screenshotted 󰨤 "
