#!/usr/bin/env bash

# Options
performance='󰓅 performance'
medium='󰾅 balance'
power='󰾆 power saver'

rofi_cmd() {
	rofi -dmenu -theme-str 'window {height: 215px; width: 250px;}' -p "Mode:"
}

# Pass variables to rofi dmenu
run_rofi() {
	echo -e "$performance\n$medium\n$power" | rofi_cmd
}

# Execute Command
run_cmd() {
	selected="$yes"
	if [[ "$selected" == "$yes" ]]; then
		if [[ $1 == '--performance' ]]; then
			powerprofilesctl set performance
			notify-send "Power set to performance mode 󰓅"
		elif [[ $1 == '--medium' ]]; then
			powerprofilesctl set balanced
			notify-send "Power set to balance mode 󰾅"
		elif [[ $1 == '--power' ]]; then
			powerprofilesctl set power-saver
			notify-send "Power set to power-saver mode 󰾆"
		fi
	else
		exit 0
	fi
}

# Actions
chosen="$(run_rofi)"
case ${chosen} in
    $performance)
		run_cmd --performance
        ;;
    $medium)
		run_cmd --medium
        ;;
    $power)
		run_cmd --power
        ;;
esac

