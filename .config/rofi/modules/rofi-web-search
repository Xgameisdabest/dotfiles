#!/usr/bin/env bash

#THIS SCRIPT WAS FABRICATED BY ME (Xgameisdabest, aka xytozine)

source ~/.config/dtf-config/config
rofi_theme=${rofi_theme:-black}

if [[ $rofi_theme == "white" ]]; then
	path_to_theme="~/.config/rofi/rofi_theme/white/white.rasi"
else
	path_to_theme="~/.config/rofi/rofi_theme/black/black.rasi"
fi

web="  Web Search"
yt="  Youtube"
github="  Github"
ai="  Ai"
virustotal="󰨯  Virus Total"
nerdfonts="󰌧  Nerd Fonts"
this_dotfiles="󰌧  This Dotfiles"
back="Back 󰌍"
quit="Exit 󰈆 "

web() {
	search=$(echo | rofi -dmenu -theme $path_to_theme -theme-str "window {height: 90px;}" -p " Search   ")
	search_engine="https://search.brave.com/search?q="
	main() {
		if [[ -n "$search" ]]; then
			url="$search_engine$search"
			xdg-open "$url"
		else
			exit
		fi
	}
	main
	exit 0
}

yt() {
	search=$(echo | rofi -dmenu -theme $path_to_theme -theme-str "window {height: 90px;}" -p " Videos   ")
	search_engine="https://www.youtube.com/results?search_query="
	main() {
		if [[ -n "$search" ]]; then
			url="$search_engine$search"
			xdg-open "$url"
		else
			exit
		fi
	}
	main
	exit 0
}

github() {
	search=$(echo | rofi -dmenu -theme $path_to_theme -theme-str "window {height: 90px;}" -p " Repositories   ")
	search_engine="https://github.com/search?q="
	main() {
		if [[ -n "$search" ]]; then
			query=$(echo "$search" | sed 's/ /+/g')
			url="${search_engine}${query}&type=repositories"
			xdg-open "$url"
		else
			exit
		fi
	}
	main
	exit 0
}

ai() {
	gemini="  Gemini"
	chatgpt="  ChatGpt"
	claude="  Claude"
	model_choice=$(echo -e "$chatgpt\n$gemini\n$claude\n$back" | rofi -dmenu -theme $path_to_theme -theme-str "window {height: 250px; width: 280px;}" -theme-str "listview {columns: 1; layout: vertical;}" -p " Ai  ")
	
	case $model_choice in
	$gemini)
		xdg-open https://gemini.google.com
		exit 0
		;;
	$chatgpt)
		xdg-open https://chatgpt.com
		exit 0
		;;
	$claude)
		xdg-open https://claude.ai
		exit 0
		;;
	$back)
		main
		;;
	esac
	
}

virustotal_func() {
	xdg-open https://www.virustotal.com
	exit 0
}

dotfiles() {
	xdg-open https://github.com/xgameisdabest/dotfiles
	exit 0
}

nerdfonts_func() {
	xdg-open https://www.nerdfonts.com/cheat-sheet
	exit 0
}

main() {
	select=$(echo -e "$web\n$yt\n$ai\n$github\n$virustotal\n$nerdfonts\n$this_dotfiles\n$quit" | rofi -dmenu -theme $path_to_theme -theme-str "window {height: 400px; width: 280px;}" -theme-str "listview {columns: 1; layout: vertical;}" -p " Select Search Mode ")

	case $select in
	$web)
		web
		;;
	$yt)
		yt
		;;
	$github)
		github
		;;
	$this_dotfiles)
		dotfiles
		;;
	$nerdfonts)
		nerdfonts_func
		;;
	$virustotal)
		virustotal_func
		;;
	$ai)
		ai
		;;
	esac
}

main
